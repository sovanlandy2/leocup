%link{:href => "//blueimp.github.io/Gallery/css/blueimp-gallery.min.css", :rel => "stylesheet"}
%br
.container.teams
	.panel.panel-primary
		.panel-heading
			%p.page-title.text-uppercase.text-center= t("team.title")
		.panel-body
			.row
				.col-md-4
					%p
						%span.label.label-danger.filter-title= t("team.region")
					
					.list-group
						- Region.all.each do |region|
							= link_to region.name, select_region_teams_path(region_id: region.id), class: "list-group-item region-name", id: "myregion#{region.id}", remote: true, method: :get
				.col-md-8
					%p
						%span.label.label-success.filter-title= t("team.winner")

					#myteam
						= render "teams"
				

	#teamshow
		= render "team"

		

