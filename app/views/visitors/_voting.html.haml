.panel.voting#all_voting
	.panel-body.vote-result
		- if flash[:msg].present?
			%p.alert.alert-success= flash[:msg]
		#question
			%p#question_text.text-center.text-khmer-bold= t "home.vote_question"
			%p#join_vote.text-center.text-khmer-bold= t "home.join_vote"
			%br
		%br
		- @winning_teams.size.times do |i|
			- teams = @winning_teams[i]
			.row
				.col-md-offset-2
				- teams.each do |team|
					- vote = TeamVote.where(team_id: team.id).count
					- if current_user && !@current_voted_teams.present?
						.col-xs-2.text-center.vote-normal.vote_team_btn{id: "voteteam#{team.id}", style: "cursor:pointer"}
							.row.vote-score.text-khmer-bold.text-center
								= (vote*100/@total_votes).to_s+"%" rescue '0.0%'
							%br
							.row.text-center
								%p.text-khmer{style: "color:white;"}= team.name
					- elsif current_user && @current_voted_teams.present?
						- if @current_voted_teams.include?(team.id)
							.col-xs-2.text-center.vote-normal
								.row.vote-score.text-khmer-bold.text-center
									= (vote*100/@total_votes).to_s+"%" rescue '0.0%'
								%br
								.row.text-center
									%p.text-khmer{style: "color:white;"}= team.name
						- else
							.col-xs-2.text-center.vote-normal
								.row.vote-score.text-khmer-bold.text-center
									= (vote*100/@total_votes).to_s+"%" rescue '0.0%'
								%br
								.row.text-center
									%p.text-khmer{style: "color:white;"}= team.name
					- else
						%a{href: "/auth/facebook"}
							.col-xs-2.text-center.vote-normal
								.row.vote-score.text-khmer-bold.text-center
									= (vote*100/@total_votes).to_s+"%" rescue '0.0%'
								%br
								.row.text-center
									%p.text-khmer{style: "color:white;"}= team.name
							
							

		#start_vote					
			%br
				#user_nav
					- if current_user
						.row
							.col-xs-8
								= render "vote_now"
							.col-xs-4.text-right
								%br
								%p.text-khmer= "#{t 'home.total_votes'} : #{@total_votes}"
							
					- else
						.row
							.col-xs-12
								= link_to t("home.sign_in_fb"), "/auth/facebook", id: "sign_in", class: "text-khmer"
						.row
							.col-xs-3
								= link_to image_tag( 'btn_loginFB.png'), '/auth/facebook'
							.col-xs-4.col-xs-offset-5.text-right
								%p.text-khmer= "#{t 'home.total_votes'} : #{@total_votes}"

		
