- photos = SliderPhoto.all
- size = photos.count
.container.slider-div  
  #myCarousel.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      - (1..size-1).each do |i|
        %li{"data-slide-to" => "#{i}", "data-target" => "#myCarousel"}
    .carousel-inner{:role => "listbox"}
      - photos.each do |p|
        - if(p == photos.first)
          .item.active
            %img.first-slide{:alt => "First slide", :src => p.photo.url}
            /.fill{:style => "background-image:url(#{p.photo.url});"}
            .container
              .carousel-caption= p.caption
        - else
          .item
            %img.first-slide{:alt => "First slide", :src => p.photo.url}
              .container
                .carousel-caption= p.caption
                  
      
    %a.left.carousel-control{"data-slide" => "prev", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#myCarousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next
  %br
