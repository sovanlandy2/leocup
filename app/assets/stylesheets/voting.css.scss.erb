.voting{
	background-image: image-url("bg_vote.jpeg");
	
	background-position: center;
	padding: 20px;
	.voting-question {
		padding: 20px;
		width: 81%;
		background-color: rgba(201, 153, 0, 0.8);
		float: none;
	    margin: 0 auto;
	    h3 {
	    	color: white;
	  	}
	  	h4 {
	  		color: black;
	  	}
	}
	#question{
		background-color: rgb(218,165,32);
		padding: 20px;
		#vote-question{
			

		}
		#question_text {
			padding-top: 30px;
			padding-bottom: 10px;
			font-size: 20px;
		}
		#join_vote {
			font-size: 16px;
		}
	}
	
	#start_vote {
		margin-top: 20px;
		padding-left: 20px;
		padding-right: 20px;
		background-color: white;
	}
	.vote-result {
		.row{
			float: none;
    		margin: 0 auto;
    		
		}
		.vote-normal {
			background-image: image-url("btn_vote_normal.jpg")	;
			background-size: 100%;
			padding: 20px;
			height: 140px;
			width: 20%;

			a:link {
				color: white important;
			}
			
			a:hover {
				text-decoration: none;
			}
		}

		.vote-normal:hover {
			background-image: image-url("btn_vote_leader.jpg")	;
		}

		.can_vote {
			background-image: image-url("btn_vote_leader.jpg")	;
		}

		.vote-selected {
			background-image: image-url("btn_vote_leader.jpg")	;
			background-size: 100%;
			padding: 20px;
			height: 120px;
			width: 20%;

			a:link {
				color: white important;
			}
			
			a:hover {
				text-decoration: none;
			}
		}

		.vote-selected a:link, .vote-normal a:hover, .vote-normal a:active {
			color: white important;
			text-decoration: none;
		}

		.vote-normal a:link, .vote-normal a:hover, .vote-normal a:active {
			color: white important;
			text-decoration: none;
		}
		.vote-leader {
			background-image: image-url("btn_vote_leader.jpg")	;
			
		}
		.vote-score {
			color: white;
			font-size: 20px;
		}
		.vote-team-name {
			color: white;
			font-size: 20px;
		}
	}

	.pls-vote {
		margin-top: 10px;
		padding: 10px;
		background-color: rgba(233, 233,233, 0.9);
		width: 83%;
		float: none;
		margin: 0 auto;
	}

	.fb-vote {
		float: none;
		margin: 0 auto;
	}
	
}

.modal-body
{
    background-color: #FFFFFF;
}

.modal-header
{
    background-color: goldenrod;
}