html,
body {
    height: 100%;
    background: url("<%= asset_path('logo_top.jpg')%>") top left no-repeat,
                url("<%= asset_path('logo_bottom.jpg')%>") bottom left no-repeat;
    background-size: 100%;
    background-color: #ed1c24;
    font-family: Oswald;

    .logo {
      padding-top: 60px;
      padding-bottom: 20px;
      h2 {
        font-weight: bold;
      }
      color: white;
      h1{
       font:bold 40pt Oswald;
       text-shadow: 0 1px 0 #ccc,
                 0 2px 0 #c9c9c9,
                 0 3px 0 #bbb,
                 0 4px 0 #b9b9b9,
                 0 5px 0 #aaa,
                 0 6px 1px rgba(0,0,0,.1),
                 0 0 5px rgba(0,0,0,.1),
                 0 1px 3px rgba(0,0,0,.3),
                 0 3px 5px rgba(0,0,0,.2),
                 0 5px 10px rgba(0,0,0,.25),
                 0 10px 10px rgba(0,0,0,.2),
                 0 20px 20px rgba(0,0,0,.15);
      }

    }
    .carousel{
      margin-top: 0px;
    }
    .carousel,
    .item,
    .active
    {
        height: 100%;
        width: 100%;
        position: relative;  
    }

    .carousel-inner {
        height: 100%;
    }

    /* Background images are set within the HTML using inline CSS, not here */

    .fill {
      width: 100%;    
      height: 100%;
      background-position: center;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      background-size: cover;
      -o-background-size: cover;
    
    }

    footer {
      margin: 50px 0;
    }

    * {
      border-radius: 0 !important;
    }
}
