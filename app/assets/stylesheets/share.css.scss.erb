

@font-face {
  font-family: "Kantumruy-Light";
  src: url("<%= asset_path('Kantumruy-Light.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Kantumruy-Bold";
  src: url("<%= asset_path('Kantumruy-Bold.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Kantumruy-Regular";
  src: url("<%= asset_path('Kantumruy-Regular.ttf')%>") format("truetype");
}

@font-face {
  font-family: "Oswald-Light";
  src: url("<%= asset_path('Oswald-Light.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Bold";
  src: url("<%= asset_path('Oswald-Bold.ttf')%>") format("truetype");
}
@font-face {
  font-family: "Oswald-Regular";
  src: url("<%= asset_path('Oswald-Regular.ttf')%>") format("truetype");
}

@font-face {
  font-family: "Dangrek";
  src: url("<%= asset_path('Dangrek.ttf')%>") format("truetype"); 
}

$green: #00a651;
$green_a: rgba(0,166,81, 0.8);
$kLight: 'Kantumruy-Light';
$kRegular: 'Kantumruy-Regular';
$kBold: 'Kantumruy-Bold';

$engLight: 'Oswald-Light';
$engRegular: 'Oswald-Regular';
$engBold: 'Oswald-Bold';

.team-description {
   font-family: $kRegular;
   font-size: 12px;
}

.coach-name {
  font-family: $kBold;
  font-size: 14px; 
}

.team-name a {
		color: $green;
		font-size: 20px;
		font-family: $kRegular;
    text-decoration: none;
}
.team-name a:hover{
    color: $green_a;
    font-size: 20px;
    font-family: $kRegular;
    text-decoration: none;
    text-shadow: 0 1px 2px rgba(210,210,210,.6);
}

.date-style {
	font-family: "Dangrek";
	font-size: 13px;
}

.panel-header-text {
	font-size: 25px;
	font-family: $kRegular;	
}


nav {
  /*background: linear-gradient(180deg, rgba(255, 255, 255, 0.9) 0%, rgba(220, 220, 220, 0.9) 100%);*/
  background: linear-gradient(white, #bcbec0);
  margin-top: 320px;

}
.navbar{
    margin-bottom: 0px;
    height: 40px;
}
nav ul {
  
  
}

nav ul li a {
  font-family: $kBold; 
  color: rgba(0, 0, 0, 0.9);
  
  font-size: 15px;
  text-decoration: none;
}

nav ul li a:hover {
  color: rgba(0, 0, 0, 0.7);
}


.page-title {
  font-family: 'Oswald-Regular'; 
  font-size: 24px;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0 3px 4px rgba(10,10,10,.6);
}

.filter-title {
  font-family: $engLight; 
  font-size: 18px;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0 3px 4px rgba(10,10,10,.6);
}
.red-title {
  font-family: $engLight; 
  font-size: 18px;
  color: red;
  text-shadow: 0 1px 2px rgba(10,10,10,.6); 
}

.match{
  .match-header {
    background-color: #f1f2f2;
    color: black;
    padding-top: 10px;
    margin: 5px 0px 10px 0px;
    
    .region-name {
      font-size: 12px;
      font-family: $kRegular;
      text-decoration: none;
    }

    .match-time {
      font-size: 12px;
      font-family: $kLight;
      color: rgb(130,130,130);
    }
  }
  .match-body{
    .match-status{
      color: $green;
      font-size: 10px;
      font-family: $engRegular;
      margin-top: 10px;
    }
  }
}

.group-date{
  color: red;
  font-family: $kBold;
  font-size: 16px;
}

.teams {
  .region-name {
    font-size: 20px;
    font-family: $kBold;
    text-decoration: none;
  }
  .team-name {
      font-size: 15px;
    font-family: $kBold;
    text-decoration: none; 
  }
  .qualifier {
    font-family: $engRegular;
    font-size: 15px;
  }
}



