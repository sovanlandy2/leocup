}

$green: rgba(0,166,81, 1);
$green_a: rgba(0,166,81, 0.8);

.region-name {
  font-size: 22px;
  font-family: "Dangrek";
  font-weight: bold;
  text-decoration: none;
}
.team-name a {
		color: $green;
		font-size: 22px;
		font-family: "Dangrek";
    font-weight: bold;
    text-decoration: none;
}
.team-name a:hover{
    color: $green_a;
    font-size: 22px;
    font-family: "Dangrek";
    font-weight: bold;
    text-decoration: none;
    text-shadow: 0 1px 2px rgba(210,210,210,.6);
}


.location-name {
	font-family: "Dangrek";		
	font-size: 18px;
}

.date-style {
	font-family: "Dangrek";
	font-size: 13px;
}

.panel-header-text {
	font-size: 25px;
	font-family: "Dangrek";	
}
.group-text {
	font-size: 15px;
	font-family: "Kantumruy-Bold";		
}


